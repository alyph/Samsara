{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "command": "./build.bat",
    "presentation": {
        "reveal": "always",
        "panel": "dedicated"
    },
    "problemMatcher": "$msCompile",
    "tasks": [
        {
            "label": "build game",
            "args": ["game"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build all",
            "args": ["all"],
            "group": "build"
        },
        {
            "label": "build tablet ui",
            "args": ["tablet_ui"],
            "group": "build"
        }
    ]
}