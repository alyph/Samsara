{
	// The plugin looks for a .jshintrc file in the same directory as the source
	// file you're prettifying (or any directory above if it doesn't exist, or in
	// your home folder if everything else fails) and uses those options along
	// the default ones.

	// Details: https://github.com/victorporof/Sublime-JSHint#using-your-own-jshintrc-options
	// Example: https://github.com/jshint/jshint/blob/master/examples/.jshintrc
	// Documentation: http://www.jshint.com/docs/options/
	"browser": true,
	//"esnext": true,
	"globalstrict": true,
	"strict": false,
	"esnext": true,
	//"esversion": "6",
	"supernew": true,
	"eqeqeq": true,
	"quotmark": false,
	"newcap": false,
	"indent": 1,
	"undef": true,
	"unused": "vars",  
	"predef": ["console", "$"],
	"globals": {
		 "Global"				:true
		,"$inst"				:false 
		,"$insts"				:false
		,"$def"					:false
		,"$defs"				:false
		,"$begin"				:false
		,"$end"					:false
		,"$use"					:false
		,"$base"				:true
		,"$v"					:false
		,"$sprite"				:false
		,"$predicate"			:false
		,"Class"				:false
		,"MathEx"				:false
		,"Vector2"				:false
		,"Queue"				:false
		,"Archive"				:false
		,"Gallery"				:false
		,"EventDispatcher"		:false
		,"UI"					:false
		,"Description"			:false
		,"World"				:false
		,"ActionDefinition"		:false
		,"BaseObject"			:false
		,"Entity"				:false
		,"Locale"				:false
		,"Character"			:false
		,"Player"				:false
		,"Keeper"				:false
		,"Party"				:false
	}
}
