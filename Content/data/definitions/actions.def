@import descriptors
@import attributes

@base Action
@namespace action
@using desc

melee_attack:
{
	displayName: "Melee Attack"
	smallPortrait: #sprite.action.melee_attack
	condition: .Func.HasDesc
	{
		card: VarRef("target")
		descs: [ #living, #hostile ]
	}

	naturalScore: 1
	supportAbilities: [ #attr.strength ]
	counterAbilities: [ #attr.dexterity ]

	effect: .Effect_MutateAttribute
	{
		target: "target"
		attribute: #attr.health
		operation: .TokenOperation
		{
			type: TokenOpType.remove
			value: { param: "score" }
		}
	}
}