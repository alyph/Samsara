{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "off",
            "tab"
        ],
        "linebreak-style": [
            "off",
            "windows"
        ],
        "quotes": [
            "off",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
        "no-console": ["error", { "allow": ["warn", "error"] }],
        "no-constant-condition": ["error", { "checkLoops": false }],
        "eqeqeq": "error"
    },
    "globals": {
        "Archive": false,
        "Entity": false,
        "Enum": false,
        "MathEx": false
    }
}